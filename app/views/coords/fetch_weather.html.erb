<h1>Weather Lookup</h1>

<form action="/weather">
  <label id="address">Input your address</label>
  <input type="text" name="address">
  <input type="submit" value="Check the weather">
</form>

<dl>
  <dt>Address:</dt>
  <dd><%= @address %></dd>

  <dt>Latitude:</dt>
  <dd><%= @latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @longitude %></dd>

  <dt>Current temperature:</dt>
  <dd><%= @temperature %></dd>

  <dt>Summary for the hour:</dt>
  <dd><%= @minutely_summary %></dd>

  <dt>Summary for the day:</dt>
  <dd><%= @hourly_summary %></dd>

  <dt>Summary for the week:</dt>
  <dd><%= @daily_summary %></dd>
</dl>
